{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "config/**",
      "configPlaywright/**",
      "configRP/**",
      "features/**",
      "services/**",
      "tests/**",
      "utils/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "auto",
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto",
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": { "noEmptyPattern": "off", "noUnusedVariables": "warn" },
      "suspicious": { "noExplicitAny": "off", "noFocusedTests": "error", "noDuplicateTestHooks": "error" }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.js", "**/*.ts", "!configPlaywright/**", "!utils/IConfig.ts"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "filenameCases": ["camelCase"]
              }
            }
          }
        }
      }
    }
  ],
  "assist": { "enabled": false }
}
